<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:s="http://jboss.com/products/seam/taglib">
<ui:composition template="/template/staub-template.jspx">
    <!--@elvariable id="pageBean" type="ru.spbspu.staub.bean.question.QuestionSelectListBean"-->
    <!--@elvariable id="messages" type="java.util.Map"-->
    <ui:param name="pageBean" value="#{questionSelectListBean}"/>
    <ui:define name="sidebar">
        <ui:include src="/system/menuPage.jspx"/>
    </ui:define>
    <ui:define name="contentTitle">
        Добавление существующих вопросов в тест
    </ui:define>
    <ui:define name="contentBody">
        <a4j:outputPanel id="contentButtons" styleClass="contentButtons">
            <a4j:form id="contentButtonsForm">
                <ui:include src="/controls/genericRefreshControl.jspx"/>
                <a4j:commandLink action="#{pageBean.removeAll}" reRender="selectedQuestionsPanel">
                    Очистить
                </a4j:commandLink>
            </a4j:form>
        </a4j:outputPanel>
        Все вопросы
        <a4j:form>
            <ui:decorate template="../controls/listLayoutControl.jspx">
                <ui:define name="listPageData">
                    <h:outputText value="#{messages['common.list.noDataFound']}"
                                  rendered="#{dataModel == null or dataModel.rowCount == 0}"/>
                    <h:dataTable id="questionList"
                                 value="#{dataModel}"
                                 var="question"
                                 rendered="#{dataModel.rowCount > 0}"
                                 styleClass="dataTable">
                        <h:column>
                            <a4j:commandLink action="#{pageBean.addQuestion}" reRender="selectedQuestionsPanel">
                                добавить
                            </a4j:commandLink>
                        </h:column>
                        <h:column>
                            <f:facet name="header">#{messages['question.list.name']}</f:facet>
                            #{question.name}
                        </h:column>
                    </h:dataTable>
                </ui:define>
            </ui:decorate>
        </a4j:form>
        Выбранные вопросы
        <br/>
        <a4j:form>
        <a4j:outputPanel id="selectedQuestionsPanel">
            <h:outputText value="Не один вопрос не выбран"
                          rendered="#{pageBean.selectedQuestions == null or pageBean.selectedQuestions.rowCount == 0}"/>
            <h:dataTable id="selectedQuestions"
                         value="#{pageBean.selectedQuestions}"
                         var="selectedQuestion"
                         rendered="#{pageBean.selectedQuestions.rowCount > 0}"
                         styleClass="dataTable">
                <h:column>
                    <a4j:commandLink action="#{pageBean.removeQuestion}" reRender="selectedQuestionsPanel">
                        удалить
                    </a4j:commandLink>
                </h:column>
                <h:column>
                    <f:facet name="header">Идентификатор</f:facet>
                    #{selectedQuestion[0]}
                </h:column>
                <h:column>
                    <f:facet name="header">Название</f:facet>
                    #{selectedQuestion[1]}
                </h:column>
            </h:dataTable>
        </a4j:outputPanel>
        </a4j:form>
    </ui:define>
</ui:composition>
</html>
