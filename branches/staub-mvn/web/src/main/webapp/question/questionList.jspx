<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:s="http://jboss.com/products/seam/taglib">
<ui:composition template="/template/staub-template.jspx">
    <!--@elvariable id="pageBean" type="ru.spbspu.staub.bean.question.QuestionListBean"-->
    <!--@elvariable id="messages" type="java.util.Map"-->
    <ui:param name="pageBean" value="#{questionListBean}"/>
    <ui:define name="sidebar">
        <ui:include src="/system/menuPage.jspx"/>
    </ui:define>
    <ui:define name="contentTitle">
        #{messages['question.list.title']}
    </ui:define>
    <ui:define name="contentBody">
        <a4j:outputPanel id="contentButtons" styleClass="contentButtons">
            <a4j:form id="contentButtonsForm">
                <ui:include src="/controls/genericCreateControl.jspx"/>
                <ui:include src="/controls/genericRefreshControl.jspx"/>
            </a4j:form>
        </a4j:outputPanel>
        <ui:decorate template="../controls/listLayoutControl.jspx">
            <ui:define name="listPageData">
                <h:outputText value="#{messages['common.list.noDataFound']}"
                              rendered="#{pageBean.dataModel == null or pageBean.dataModel.rowCount == 0}"/>
                <h:dataTable id="questionList"
                             value="#{pageBean.dataModel}"
                             var="question"
                             rendered="#{pageBean.dataModel.rowCount > 0}"
                             styleClass="dataTable">
                    <h:column>
                        <f:facet name="header">#{messages['question.list.name']}</f:facet>
                        <s:link action="detail" value="#{question.name}">
                            <f:param name="modelId" value="#{question.id}"/>
                            <f:param name="beanMode" value="EDIT_MODE"/>
                        </s:link>
                    </h:column>
                </h:dataTable>
            </ui:define>
        </ui:decorate>
    </ui:define>
</ui:composition>
</html>