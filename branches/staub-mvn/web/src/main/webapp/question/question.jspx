<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:s="http://jboss.com/products/seam/taglib">
<ui:composition template="../template/staub-template.jspx">
    <ui:param name="pageBean" value="#{questionBean}"/>
    <!--@elvariable id="pageBean" type="ru.spbspu.staub.bean.question.QuestionBean"-->
    <!--@elvariable id="messages" type="java.util.Map"-->
    <ui:define name="pageScript">
        <a4j:loadScript src="../script/timer.js"/>
    </ui:define>
    <ui:define name="sidebar">
        <a4j:outputPanel id="timerPanel"
                         rendered="#{pageBean.hasNextQuestion and pageBean.timeLimitPresent}">
            Time - <span id="timerField"/>
            <script type="text/javascript">
                Timer.init({timeToCount : '#{pageBean.currentQuestion.timeLimit}',
                    currentTime : '#{pageBean.currentTime}',
                    timerFieldId : 'timerField'});
            </script>
            <br/>
            #{pageBean.currentQuestion.timeLimit}
            <br/>
            #{pageBean.currentTime}
        </a4j:outputPanel>

        <h:form>
            <a4j:poll action="#{pageBean.refreshTimer}" reRender="timerPanel" interval="10000"
                      enabled="#{pageBean.hasNextQuestion and pageBean.timeLimitPresent}"/>
        </h:form>
    </ui:define>
    <ui:define name="contentTitle">
        #{pageBean.currentQuestion.name}
    </ui:define>
    <ui:define name="contentBody">
        <a4j:form id="questionForm">
            <a4j:outputPanel id="questionContentPanel" rendered="#{pageBean.hasNextQuestion}">
                <ui:include src="../controls/questionDefinitionControl.jspx"/>
                <ui:include src="../controls/questionAnswerControl.jspx"/>
            </a4j:outputPanel>
            <a4j:outputPanel id="noQuestionPanel" rendered="#{!pageBean.hasNextQuestion}">
                Вопросы кончились!
                Тест завершен!
            </a4j:outputPanel>
            <br/>
            <a4j:outputPanel id="contentButtons" styleClass="contentButtons">
                <a4j:commandButton id="prevQuestionButton"
                                   action="#{pageBean.previousQuestion}"
                                   value="#{messages['question.detail.previousQuestion']}"
                                   styleClass="button"
                                   disabled="#{!pageBean.hasPreviousQuestion}"
                                   reRender="content, sidebar"
                                   rendered="false"/>
                <a4j:commandButton id="nextQuestionButton"
                                   action="#{pageBean.nextQuestion}"
                                   value="#{messages['question.detail.nextQuestion']}"
                                   styleClass="button"
                                   rendered="#{pageBean.hasNextQuestion}"
                                   reRender="content, sidebar"
                                   onclick="Timer.destroy()"/>
                <a4j:jsFunction name="nextQuestion"
                                action="#{pageBean.nextQuestion}"
                                reRender="content, sidebar"/>
                <s:button id="endTestButton"
                          action="#{questionBean.endTest}"
                          value="#{messages['question.detail.endTest']}"
                          styleClass="button"
                          rendered="#{!pageBean.hasNextQuestion}"/>
            </a4j:outputPanel>
        </a4j:form>
    </ui:define>
</ui:composition>
</html>