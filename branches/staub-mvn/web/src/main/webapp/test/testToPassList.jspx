<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:s="http://jboss.com/products/seam/taglib">
    <ui:composition template="../template/staub-template.jspx">
    <ui:param name="pageBean" value="#{testToPassListBean}"/>
    <ui:define name="contentTitle">
        #{messages['test.list.title']}
    </ui:define>
    <ui:define name="contentMain">
        <div class="section">
            <ui:decorate template="../controls/listLayoutControl.jspx">
                <ui:define name="listPageData">
                    <h:outputText value="#{messages['common.list.noDataFound']}"
                                  rendered="#{dataModel == null or dataModel.rowCount == 0}"/>
                    <h:dataTable id="testList"
                                 value="#{dataModel}"
                                 var="test"
                                 rendered="#{dataModel.rowCount > 0}"
                                 styleClass="dataTable">
                        <h:column>
                            <f:facet name="header">#{messages['test.list.name']}</f:facet>
                            <s:link view="/test/testStart.seam" value="#{test.name}">
                                <f:param name="modelId" value="#{test.id}"/>
                            </s:link>
                        </h:column>
                        <h:column>
                            <f:facet name="header">#{messages['test.list.questionsCount']}</f:facet>
                            #{test.questionsCount}
                        </h:column>
                    </h:dataTable>
                </ui:define>
            </ui:decorate>
        </div>
    </ui:define>
</ui:composition>
</html>