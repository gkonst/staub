<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:s="http://jboss.com/products/seam/taglib">
<ui:composition template="../template/staub-template.jspx">
    <ui:define name="contentTitle">
        #{testStartBean.model.name}
    </ui:define>
    <ui:define name="contentBody">
        <table class="detailTable">
            <tr>
                <td align="right">
                    <strong>#{messages['test.detail.description']}</strong>
                </td>
                <td>
                    #{testStartBean.model.description}
                </td>
            </tr>
            <tr>
                <td align="right">
                    <strong>#{messages['test.detail.timeLimit']}</strong>
                </td>
                <td>
                    #{testStartBean.model.timeLimit}
                </td>
            </tr>
            <tr>
                <td align="right">
                    <strong>#{messages['test.detail.passScore']}</strong>
                </td>
                <td>
                    #{testStartBean.model.passScore}
                </td>
            </tr>
            <tr>
                <td align="right">
                    <strong>#{messages['test.detail.questionsCount']}</strong>
                </td>
                <td>
                    #{testStartBean.model.questionsCount}
                </td>
            </tr>
        </table>
        <a4j:outputPanel id="contentButtons" styleClass="contentButtons">
            <s:button action="testListForPass" value="#{messages['test.detail.back']}" styleClass="button"/>
            <s:button action="#{testStartBean.prepareTest}" value="#{messages['test.detail.startTest']}"
                      styleClass="button" propagation="begin">
                <f:param name="modelId" value="#{testStartBean.model.id}"/>
            </s:button>
        </a4j:outputPanel>
    </ui:define>
</ui:composition>
</html>