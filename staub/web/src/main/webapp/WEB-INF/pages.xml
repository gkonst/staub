<?xml version="1.0" encoding="UTF-8"?>
<pages xmlns="http://jboss.com/products/seam/pages"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd"
       login-view-id="/system/main.jspx">

    <!-- Common pages -->
    <page view-id="/system/loginStudent.jspx">
        <navigation>
            <rule if="#{identity.loggedIn}">
                <redirect view-id="/test/testToPassList.jspx">
                    <param name="beanMode" value="VIEW_MODE"/>
                </redirect>
            </rule>
        </navigation>
    </page>
    <page view-id="/system/loginUser.jspx">
        <navigation>
            <rule if="#{identity.loggedIn and s:hasRole('TEST_WRITER')}">
                <redirect view-id="/test/testList.jspx">
                    <param name="beanMode" value="VIEW_MODE"/>
                </redirect>
            </rule>
        </navigation>
    </page>
    <page view-id="*">
        <navigation from-action="#{identity.logout}">
            <redirect view-id="/system/main.jspx"/>
        </navigation>
    </page>

    <!-- User pages -->
    <page view-id="/test/testToPassList.jspx"
          login-required="true"
          action="#{testToPassListBean.initBean}">
    </page>
    <page view-id="/test/testStart.jspx"
          login-required="true"
          action="#{testStartBean.initBean}">
        <navigation>
            <rule if-outcome="testPrepare">
                <render view-id="/test/testPrepare.jspx"/>
            </rule>
            <rule if-outcome="testListForPass">
                <render view-id="/test/testToPassList.jspx"/>
            </rule>
        </navigation>
    </page>
    <page view-id="/question/question.jspx"
          login-required="true"
          action="#{questionBean.initBean}">
        <navigation>
            <rule if-outcome="testEnd">
                <redirect view-id="/test/testEnd.jspx"/>
            </rule>
        </navigation>
    </page>
    <page view-id="/test/testPrepare.jspx"
          login-required="true">
        <navigation>
            <render view-id="/question/question.jspx"/>
        </navigation>
    </page>
    <page view-id="/test/testEnd.jspx"
          login-required="true"
          action="#{testEndBean.initBean}">
    </page>

    <!-- Administrator pages -->

    <!-- Tests -->
    <page view-id="/test/testList.jspx"
          login-required="true"
          action="#{testListBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="detail">
                <render view-id="/test/testDetail.jspx"/>
            </rule>
            <rule if-outcome="studentAssignList">
                <render view-id="/student/studentAssignList.jspx"/>
            </rule>
        </navigation>
    </page>
    <page view-id="/test/testDetail.jspx"
          login-required="true"
          action="#{testDetailBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="list">
                <render view-id="/test/testList.jspx"/>
            </rule>
        </navigation>
    </page>

    <!-- Users -->
    <page view-id="/student/studentAssignList.jspx"
          login-required="true"
          action="#{studentAssignListBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="testList">
                <render view-id="/test/testList.jspx"/>
            </rule>
        </navigation>
    </page>

    <!-- Questions -->
    <page view-id="/question/questionList.jspx"
          login-required="true"
          action="#{questionListBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="detail">
                <render view-id="/question/questionDetail.jspx"/>
            </rule>
        </navigation>
    </page>
    <page view-id="/question/questionDetail.jspx"
          login-required="true"
          action="#{questionDetailBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="list">
                <render view-id="/question/questionList.jspx"/>
            </rule>
        </navigation>
    </page>

    <!-- Disciplines -->
    <page view-id="/question/disciplineList.jspx"
          login-required="true"
          action="#{disciplineListBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="detail">
                <render view-id="/question/disciplineDetail.jspx"/>
            </rule>
            <rule if-outcome="categoryList">
                <render view-id="/category/categoryList.jspx"/>
            </rule>
        </navigation>
    </page>
    <page view-id="/question/disciplineDetail.jspx"
          login-required="true"
          action="#{disciplineDetailBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="list">
                <render view-id="/question/disciplineList.jspx"/>
            </rule>
        </navigation>
    </page>

    <!-- Categories -->
    <page view-id="/category/categoryList.jspx"
          login-required="true"
          action="#{categoryListBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="detail">
                <render view-id="/category/categoryDetail.jspx"/>
            </rule>
            <rule if-outcome="topicList">
                <render view-id="/topic/topicList.jspx"/>
            </rule>
        </navigation>
    </page>
    <page view-id="/category/categoryDetail.jspx"
          login-required="true"
          action="#{categoryDetailBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="list">
                <render view-id="/category/categoryList.jspx"/>
            </rule>
        </navigation>
    </page>

    <!-- Topics -->
    <page view-id="/topic/topicList.jspx"
          login-required="true"
          action="#{topicListBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="detail">
                <render view-id="/topic/topicDetail.jspx"/>
            </rule>
        </navigation>
    </page>
    <page view-id="/topic/topicDetail.jspx"
          login-required="true"
          action="#{topicDetailBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="list">
                <render view-id="/topic/topicList.jspx"/>
            </rule>
        </navigation>
    </page>

    <!-- Difficulties -->
    <page view-id="/difficulty/difficultyList.jspx"
          login-required="true"
          action="#{difficultyListBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="detail">
                <render view-id="/difficulty/difficultyDetail.jspx"/>
            </rule>
        </navigation>
    </page>
    <page view-id="/difficulty/difficultyDetail.jspx"
          login-required="true"
          action="#{difficultyDetailBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="list">
                <render view-id="/difficulty/difficultyList.jspx"/>
            </rule>
        </navigation>
    </page>

    <!-- Students -->
    <page view-id="/student/studentList.jspx"
          login-required="true"
          action="#{studentListBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="detail">
                <render view-id="/student/studentDetail.jspx"/>
            </rule>
        </navigation>
    </page>
    <page view-id="/student/studentDetail.jspx"
          login-required="true"
          action="#{studentDetailBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="list">
                <render view-id="/student/studentList.jspx"/>
            </rule>
        </navigation>
    </page>

    <!-- Groups -->
    <page view-id="/student/groupList.jspx"
          login-required="true"
          action="#{groupListBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="detail">
                <render view-id="/student/groupDetail.jspx"/>
            </rule>
        </navigation>
    </page>
    <page view-id="/student/groupDetail.jspx"
          login-required="true"
          action="#{groupDetailBean.initBean}">
        <restrict>#{s:hasRole('TEST_WRITER')}</restrict>
        <navigation>
            <rule if-outcome="list">
                <render view-id="/student/groupList.jspx"/>
            </rule>
        </navigation>
    </page>

    <!-- Exceptions -->
    <exception class="org.jboss.seam.security.NotLoggedInException">
        <redirect view-id="/system/main.jspx">
            <message severity="warn">#{messages['system.login.unauthorizedError']}</message>
        </redirect>
    </exception>
    <exception class="javax.faces.application.ViewExpiredException">
        <redirect view-id="/system/main.jspx">
            <message severity="warn">#{messages['system.login.unauthorizedError']}</message>
        </redirect>
    </exception>
    <exception class="org.jboss.seam.security.AuthorizationException">
        <end-conversation/>
        <!-- TODO May be replace with special page -->
        <http-error error-code="403"/>
    </exception>
</pages>
