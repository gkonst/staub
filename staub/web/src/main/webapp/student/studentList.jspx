<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:s="http://jboss.com/products/seam/taglib">
<ui:composition template="/template/staub-template.jspx">
    <!--@elvariable id="pageBean" type="ru.spbspu.staub.bean.student.StudentListBean"-->
    <!--@elvariable id="messages" type="java.util.Map"-->
    <ui:param name="pageBean" value="#{studentListBean}"/>
    <ui:define name="sidebar">
        <ui:include src="/system/menuPage.jspx"/>
    </ui:define>
    <ui:define name="contentTitle">
        #{messages['student.list.title']}
    </ui:define>
    <ui:define name="contentBody">
        <a4j:form id="contentBodyForm">
            <a4j:outputPanel id="contentButtons" styleClass="contentButtons">
                <ui:include src="/controls/genericCreateControl.jspx"/>
                <ui:include src="/controls/genericRefreshControl.jspx"/>
            </a4j:outputPanel>
            <ui:decorate template="../controls/listLayoutControl.jspx">
                <ui:define name="listPageData">
                    <rich:dataTable id="studentList"
                                    value="#{pageBean.dataModel}"
                                    var="student"
                                    rendered="#{pageBean.dataModel != null}"
                                    styleClass="dataTable">
                        <rich:column id="col1">
                            <f:facet name="header">#{messages['student.list.name']}</f:facet>
                            <s:link id="editStudentLink"
                                    action="detail" value="#{student.name}">
                                <f:param id="idParam" name="modelId" value="#{student.id}"/>
                                <f:param id="beanModeParam" name="beanMode" value="EDIT_MODE"/>
                            </s:link>
                        </rich:column>
                        <rich:column id="col2">
                            <f:facet name="header">
                                <a4j:outputPanel id="groupPanel">
                                    #{messages['student.list.group.name']}
                                    <br/>
                                    <br/>
                                    <h:selectOneMenu id="groupSelect"
                                                     value="#{pageBean.group}"
                                                     converter="ru.spbspu.staub.ObjectSelectConverter"
                                                     style="width:8em;">
                                        <s:selectItems id="groupSelectItems"
                                                       value="#{pageBean.groupList}"
                                                       var="group"
                                                       label="#{group.name}"
                                                       noSelectionLabel="#{messages['student.list.group.all']}"/>
                                        <a4j:support id="groupSelectSupport"
                                                     event="onchange"
                                                     action="#{pageBean.setGroup}"
                                                     reRender="contentBodyForm"
                                                     ajaxSingle="true"/>
                                    </h:selectOneMenu>
                                </a4j:outputPanel>
                            </f:facet>
                            #{student.group.name}
                        </rich:column>
                        <rich:column id="col3" styleClass="columnIcon">
                            <a4j:commandButton id="deleteButton"
                                               action="#{pageBean.doDelete}"
                                               onclick="if (!(confirm('#{messages['common.list.functions.delete.confirm']}'))) return false;"
                                               title="#{messages['common.list.functions.delete']}"
                                               image="/images/icons/icon_delete.gif"
                                               reRender="contentBodyForm"/>
                        </rich:column>
                    </rich:dataTable>
                    <h:outputText id="notFoundText"
                                  value="#{messages['common.list.noDataFound']}"
                                  rendered="#{pageBean.dataModel == null or pageBean.dataModel.rowCount == 0}"/>
                </ui:define>
            </ui:decorate>
        </a4j:form>
    </ui:define>
</ui:composition>
</html>