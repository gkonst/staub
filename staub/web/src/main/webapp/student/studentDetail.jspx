<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:s="http://jboss.com/products/seam/taglib">
<ui:composition template="/template/staub-template.jspx">
    <!--@elvariable id="pageBean" type="ru.spbspu.staub.bean.student.StudentDetailBean"-->
    <!--@elvariable id="messages" type="java.util.Map"-->
    <ui:param name="pageBean" value="#{studentDetailBean}"/>
    <ui:define name="sidebar">
        <ui:include src="/system/menuAdmin.jspx"/>
    </ui:define>
    <ui:define name="contentTitle">
        #{messages['student.detail.title']}
    </ui:define>
    <ui:define name="contentBody">
        <a4j:form id="studentDetailForm">
            <a4j:outputPanel id="contentButtons" styleClass="contentButtons">
                <ui:include src="/controls/genericSaveControl.jspx"/>
            </a4j:outputPanel>
            <fieldset class="area">
                <table>
                    <tr>
                        <td>
                            <h:outputLabel id="nameLabel"
                                           value="#{messages['student.detail.name']}"
                                           for="nameInput"/>
                        </td>
                        <td>
                            <h:inputText id="nameInput"
                                         value="#{pageBean.model.name}"
                                         disabled="#{pageBean.viewMode}"
                                         required="true"
                                         requiredMessage="#{messages['student.detail.required.code']}"
                                         styleClass="required"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h:outputLabel id="codeLabel"
                                           value="#{messages['student.detail.code']}"
                                           for="codeInput"/>
                        </td>
                        <td>
                            <h:inputText id="codeInput"
                                         value="#{pageBean.model.code}"
                                         disabled="#{pageBean.viewMode}"
                                         required="true"
                                         requiredMessage="#{messages['student.detail.required.code']}"
                                         styleClass="required"
                                         validator="#{pageBean.validateCode}"
                                         validatorMessage="#{messages['student.detail.validation.code']}"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h:outputLabel id="groupLabel"
                                           value="#{messages['student.detail.group']}"
                                           for="groupSelect"/>
                        </td>
                        <td>
                            <h:selectOneMenu id="groupSelect"
                                             value="#{pageBean.model.group}"
                                             disabled="#{pageBean.viewMode}"
                                             converter="ru.spbspu.staub.ObjectSelectConverter"
                                             styleClass="required"
                                             required="true"
                                             requiredMessage="#{messages['student.detail.required.group']}">
                                <s:selectItems id="groupSelectItems"
                                               value="#{pageBean.groupList}"
                                               var="group"
                                               label="#{group.name}"/>
                            </h:selectOneMenu>
                        </td>
                    </tr>
                </table>
            </fieldset>
        </a4j:form>
    </ui:define>
</ui:composition>
</html>