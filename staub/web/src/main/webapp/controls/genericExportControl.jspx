<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich">

<ui:composition>
    <!--@elvariable id="pageBean" type="ru.spbspu.staub.bean.GenericExportableListBean"-->
    <!--@elvariable id="messages" type="java.util.Map"-->
    <a4j:commandButton id="exportLink"
                       action="#{pageBean.doExport}"
                       oncomplete="if(typeof data == 'undefined' || data == null) { Richfaces.showModalPanel('exportFileInfoModalPanel',{width:350, top:200}); }"
                       data="#{facesContext.maximumSeverity}"
                       value="#{messages['common.list.functions.exportExcel']}"
                       styleClass="button"/>
    <rich:modalPanel id="exportFileInfoModalPanel" minHeight="100" minWidth="300"
                     height="100" width="350" zindex="2000">
        <f:facet name="header">
            #{messages['system.export.title']}
        </f:facet>
        <f:facet name="controls">
            <a4j:region id="cancelExportRegion">
                <a4j:commandLink id="cancelExportLink"
                                 action="#{pageBean.doCancelExport}"
                                 oncomplete="Richfaces.hideModalPanel('exportFileInfoModalPanel')">
                    <h:graphicImage id="cancelExportImage"
                                    value="/images/icons/icon_close.gif"
                                    styleClass="clickable"
                                    alt="#{messages['system.export.cancel']}"/>
                </a4j:commandLink>
            </a4j:region>
        </f:facet>

        <div align="center">
            #{messages['system.export.info']}
        </div>
        <br/>
        <br/>

        <div align="center">
            <h:outputLink id="export2ExcelLink"
                          value="#{facesContext.externalContext.requestContextPath}/seam/resource/export"
                          onclick="Richfaces.hideModalPanel('exportFileInfoModalPanel');">
                #{messages['system.export.getAsXLS']}
                <f:param id="export2ExcelLinkParam" name="STAUB-EXPORT-CONTENT-TYPE" value="EXCEL"/>
            </h:outputLink>
            &#160;&#160;&#160;&#160;
            <h:outputLink id="export2ZipLink"
                          value="#{facesContext.externalContext.requestContextPath}/seam/resource/export"
                          onclick="Richfaces.hideModalPanel('exportFileInfoModalPanel');">
                #{messages['system.export.getAsZIP']}
                <f:param id="export2ZipLinkParam" name="STAUB-EXPORT-CONTENT-TYPE" value="ZIP"/>
            </h:outputLink>
        </div>
        <br/>
    </rich:modalPanel>
</ui:composition>
</html>
