<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE datasources
    PUBLIC "-//JBoss//DTD JBOSS JCA Config 1.5//EN"
    "http://www.jboss.org/j2ee/dtd/jboss-ds_1_5.dtd">

<datasources>
    <local-tx-datasource>
        <jndi-name>staubDS</jndi-name>
        <connection-url>jdbc:postgresql://${db.url.host}:${db.url.port}/${db.url.name}</connection-url>
        <driver-class>org.postgresql.Driver</driver-class>
        <user-name>${db.staub.username}</user-name>
        <password>${db.staub.password}</password>
    </local-tx-datasource>
</datasources>

