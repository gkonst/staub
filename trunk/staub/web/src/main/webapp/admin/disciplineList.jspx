<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:s="http://jboss.com/products/seam/taglib">
<ui:composition template="/template/staub-template.jspx">
    <!--@elvariable id="pageBean" type="ru.spbspu.staub.bean.admin.DisciplineListBean"-->
    <!--@elvariable id="messages" type="java.util.Map"-->
    <ui:param name="pageBean" value="#{disciplineListBean}"/>
    <ui:define name="sidebar">
        <ui:include src="/system/menuAdmin.jspx"/>
    </ui:define>
    <ui:define name="contentTitle">
        #{messages['discipline.list.title']}
    </ui:define>
    <ui:define name="contentBody">
        <a4j:form id="contentBodyForm">
            <a4j:outputPanel id="contentButtons" styleClass="contentButtons">
                <ui:include src="/controls/genericCreateControl.jspx"/>
                <ui:include src="/controls/genericRefreshControl.jspx"/>
            </a4j:outputPanel>
            <ui:decorate template="/controls/listLayoutControl.jspx">
                <ui:define name="listPageData">
                    <h:outputText id="notFoundText"
                                  value="#{messages['common.list.noDataFound']}"
                                  rendered="#{pageBean.dataModel == null or pageBean.dataModel.rowCount == 0}"/>
                    <rich:dataTable id="disciplineList"
                                    value="#{pageBean.dataModel}"
                                    var="discipline"
                                    rendered="#{pageBean.dataModel.rowCount > 0}"
                                    styleClass="dataTable">
                        <rich:column id="col1" styleClass="columnIcon">
                            <a4j:htmlCommandLink id="categoryListLink"
                                                 action="#{pageBean.showCategories}">
                                <h:graphicImage id="categoryListLinkImage"
                                                url="/images/icons/icon_detail_view.gif"
                                                alt="#{messages['discipline.list.showCategories']}"/>
                            </a4j:htmlCommandLink>
                        </rich:column>
                        <rich:column id="col2">
                            <f:facet name="header">
                                <ui:decorate template="/controls/listSortableControl.jspx">
                                    <ui:param name="sortColumnName" value="code"/>
                                    <ui:param name="sortColumnTitle" value="#{messages['discipline.list.code']}"/>
                                </ui:decorate>
                            </f:facet>
                            <s:link id="editDisciplineLink"
                                    action="detail" value="#{discipline.code}">
                                <f:param id="idParam" name="modelId" value="#{discipline.id}"/>
                                <f:param id="beanModeParam" name="beanMode" value="EDIT_MODE"/>
                            </s:link>
                        </rich:column>
                        <rich:column id="col3">
                            <f:facet name="header">
                                <ui:decorate template="/controls/listSortableControl.jspx">
                                    <ui:param name="sortColumnName" value="name"/>
                                    <ui:param name="sortColumnTitle" value="#{messages['discipline.list.name']}"/>
                                </ui:decorate>
                            </f:facet>
                            #{discipline.name}
                        </rich:column>
                        <rich:column id="col4" styleClass="columnIcon">
                            <a4j:commandButton id="deleteButton"
                                               action="#{pageBean.doDelete}"
                                               onclick="if (!(confirm('#{messages['common.list.functions.delete.confirm']}'))) return false;"
                                               title="#{messages['common.list.functions.delete']}"
                                               image="/images/icons/icon_delete.gif"
                                               reRender="contentBodyForm"/>
                        </rich:column>
                    </rich:dataTable>
                </ui:define>
            </ui:decorate>
        </a4j:form>
    </ui:define>
</ui:composition>
</html>