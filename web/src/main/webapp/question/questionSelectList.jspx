<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:s="http://jboss.com/products/seam/taglib">
<ui:composition template="/template/staub-template.jspx">
    <!--@elvariable id="pageBean" type="ru.spbspu.staub.bean.question.QuestionSelectListBean"-->
    <!--@elvariable id="messages" type="java.util.Map"-->
    <ui:param name="pageBean" value="#{questionSelectListBean}"/>
    <ui:define name="sidebar">
        <ui:include src="/system/menuPage.jspx"/>
    </ui:define>
    <ui:define name="contentTitle">
        #{messages['question.select.list.title']}
    </ui:define>
    <ui:define name="contentBody">
        <a4j:outputPanel id="contentButtons" styleClass="contentButtons">
            <a4j:form id="contentButtonsForm">
                <ui:include src="/controls/genericSaveControl.jspx"/>
                <ui:include src="/controls/genericRefreshControl.jspx"/>
                <a4j:commandButton id="removeAllButton"
                                   action="#{pageBean.removeAll}"
                                   reRender="selectedQuestionsPanel"
                                   value="#{messages['common.detail.functions.clear']}"
                                   styleClass="button"
                                   rendered="#{pageBean.editMode}"/>
            </a4j:form>
        </a4j:outputPanel>
        #{messages['question.select.list.selectedQuestions']}
        <br/>
        <a4j:form id="selectedQuestionsForm">
            <a4j:outputPanel id="selectedQuestionsPanel" style="height:100px; width:98%; overflow:auto;" layout="block"
                             styleClass="listTableContent">
                <h:outputText id="noSelectedQuestionsLabel"
                              value="#{messages['question.select.list.noSelectedQuestions']}"
                              rendered="#{pageBean.selectedQuestions == null or pageBean.selectedQuestions.rowCount == 0}"/>
                <h:dataTable id="selectedQuestions"
                             value="#{pageBean.selectedQuestions}"
                             var="selectedQuestion"
                             rendered="#{pageBean.selectedQuestions.rowCount > 0}"
                             styleClass="dataTable">
                    <h:column>
                        <a4j:commandButton id="removeQuestionButton"
                                           action="#{pageBean.removeQuestion}"
                                           reRender="selectedQuestionsPanel"
                                           image="/images/icons/icon_delete.gif"
                                           rendered="#{pageBean.editMode}"/>
                        <h:graphicImage id="addQuestionImageDisabled"
                                        url="/images/icons/icon_delete_disable.gif"
                                        rendered="#{!pageBean.editMode}"/>
                    </h:column>
                    <h:column>
                        <f:facet name="header">#{messages['question.select.list.selectedQuestions.id']}</f:facet>
                        #{selectedQuestion[0]}
                    </h:column>
                    <h:column>
                        <f:facet name="header">#{messages['question.select.list.selectedQuestions.name']}</f:facet>
                        #{selectedQuestion[1]}
                    </h:column>
                </h:dataTable>
            </a4j:outputPanel>
        </a4j:form>
        <br/>
        <br/>
        #{messages['question.select.list.allQuestions']}
        <a4j:form>
            <ui:decorate template="../controls/listLayoutControl.jspx">
                <ui:define name="listPageData">
                    <h:outputText value="#{messages['common.list.noDataFound']}"
                                  rendered="#{dataModel == null or dataModel.rowCount == 0}"/>
                    <h:dataTable id="questionList"
                                 value="#{dataModel}"
                                 var="question"
                                 rendered="#{dataModel.rowCount > 0}"
                                 styleClass="dataTable">
                        <h:column>
                            <a4j:commandButton id="addQuestionButton"
                                               action="#{pageBean.addQuestion}"
                                               reRender="selectedQuestionsPanel"
                                               image="/images/icons/icon_add.gif"
                                               rendered="#{pageBean.editMode}"/>
                            <h:graphicImage id="addQuestionImageDisabled"
                                            url="/images/icons/icon_add_disable.gif"
                                            rendered="#{!pageBean.editMode}"/>
                        </h:column>
                        <h:column>
                            <f:facet name="header">#{messages['question.list.name']}</f:facet>
                            #{question.name}
                        </h:column>
                    </h:dataTable>
                </ui:define>
            </ui:decorate>
        </a4j:form>
    </ui:define>
</ui:composition>
</html>
