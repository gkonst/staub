<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:rich="http://richfaces.org/rich"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:s="http://jboss.com/products/seam/taglib">
<ui:composition template="/template/staub-template.jspx">
    <ui:param name="pageBean" value="#{disciplineListBean}"/>
    <!--@elvariable id="pageBean" type="ru.spbspu.staub.bean.question.DisciplineListBean"-->
    <ui:define name="sidebar">
        <ui:include src="/system/menuPage.jspx"/>
    </ui:define>
    <ui:define name="contentTitle">
        #{messages['discipline.list.title']}
    </ui:define>
    <ui:define name="contentBody">
        <a4j:outputPanel id="contentButtons" styleClass="contentButtons">
            <a4j:form id="contentButtonsForm">
                <ui:include src="/controls/genericCreateControl.jspx"/>
                <ui:include src="/controls/genericRefreshControl.jspx"/>
            </a4j:form>
        </a4j:outputPanel>
        <ui:decorate template="../controls/listLayoutControl.jspx">
            <ui:define name="listPageData">
                <h:outputText id="notFoundText"
                              value="#{messages['common.list.noDataFound']}"
                              rendered="#{dataModel == null or dataModel.rowCount == 0}"/>
                <h:dataTable id="disciplineList"
                             value="#{dataModel}"
                             var="discipline"
                             rendered="#{dataModel.rowCount > 0}"
                             styleClass="dataTable"
                             columnClasses=",,columnIcon">
                    <h:column id="col1">
                        <f:facet name="header">#{messages['discipline.list.code']}</f:facet>
                        <s:link action="detail" value="#{discipline.code}">
                            <f:param name="modelId" value="#{discipline.id}"/>
                            <f:param name="beanMode" value="EDIT_MODE"/>
                        </s:link>
                    </h:column>
                    <h:column id="col2">
                        <f:facet name="header">#{messages['discipline.list.name']}</f:facet>
                        #{discipline.name}
                    </h:column>
                    <h:column id="col3">
                        <a4j:commandButton id="deleteButton"
                                           action="#{pageBean.doDelete}"
                                           onclick="if (!(confirm('#{messages['common.list.functions.delete.confirm']}'))) return false;"
                                           title="#{messages['common.list.functions.delete']}"
                                           image="/images/icon_delete.gif"
                                           reRender="#{bodyPanelId}"/>
                    </h:column>
                </h:dataTable>
            </ui:define>
        </ui:decorate>
    </ui:define>
</ui:composition>
</html>