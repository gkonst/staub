<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:a4j="http://richfaces.org/a4j"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:s="http://jboss.com/products/seam/taglib">
<ui:composition template="../template/staub-template.jspx">
    <ui:define name="pageScript">
        <a4j:loadScript src="../script/timer.js"/>
    </ui:define>
    <ui:define name="sidebar">
        <a4j:outputPanel id="timerPanel" rendered="#{questionDetailBean.hasNextQuestion}">
            Time - <span id="timerField"/>
            <script type="text/javascript">
                Timer.init({timeToCount : '#{questionDetailBean.currentQuestion.timeLimit}',
                    currentTime : '#{questionDetailBean.currentTime}',
                    timerFieldId : 'timerField'});
            </script>
            <br/>
            #{questionDetailBean.currentQuestion.timeLimit}
            <br/>
            #{questionDetailBean.currentTime}
        </a4j:outputPanel>
        
        <h:form>
            <a4j:poll action="#{questionDetailBean.refreshTimer}" reRender="timerPanel" interval="10000"
                      enabled="#{questionDetailBean.hasNextQuestion}"/>
        </h:form>
    </ui:define>
    <ui:define name="contentTitle">
        #{questionDetailBean.currentQuestion.name}
    </ui:define>
    <ui:define name="contentMain">
        <a4j:outputPanel id="questionContentPanel" rendered="#{questionDetailBean.hasNextQuestion}">
            <ui:include src="../controls/questionDefinitionControl.jspx"/>
            <ui:include src="../controls/questionAnswerControl.jspx"/>
        </a4j:outputPanel>
        <a4j:outputPanel id="noQuestionPanel" rendered="#{!questionDetailBean.hasNextQuestion}">
            Вопросы кончились!
        </a4j:outputPanel>
    </ui:define>
    <ui:define name="contentButtons">
        <a4j:commandButton id="prevQuestionButton"
                           action="#{questionDetailBean.previousQuestion}"
                           value="#{messages['question.detail.previousQuestion']}"
                           styleClass="button"
                           disabled="#{!questionDetailBean.hasPreviousQuestion}"
                           reRender="content, sidebar"/>
        <a4j:commandButton id="nextQuestionButton"
                           action="#{questionDetailBean.nextQuestion}"
                           value="#{messages['question.detail.nextQuestion']}"
                           styleClass="button"
                           disabled="#{!questionDetailBean.hasNextQuestion}"
                           reRender="content, sidebar"
                           onclick="Timer.destroy()"/>
        <a4j:jsFunction name="nextQuestion"
                        action="#{questionDetailBean.nextQuestion}"
                        reRender="content, sidebar"/>
        <s:button id="endTestButton"
                  action="#{questionDetailBean.endTest}"
                  value="#{messages['question.detail.endTest']}"
                  styleClass="button"/>
    </ui:define>
</ui:composition>
</html>