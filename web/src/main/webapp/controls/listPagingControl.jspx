<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:a4j="http://richfaces.org/a4j">

    <ui:composition>
        <table border="0" cellspacing="0" cellpadding="0" width="100%">
        <tr>
            <td align="left" width="50%" class="pagingContent">
                #{pageBean.rowsOnCurrentPage} #{messages['common.list.paging.items']} #{pageBean.rowsTotal} #{messages['common.list.paging.shown']}
            </td>
            <td align="right" width="50%">
                <table border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td nowrap="nowrap" class="pagingContent">
                       <h:outputText id="#{pagerAlign}_pageManyText"
                                    value="#{messages['common.list.paging.page']} #{pageBean.currentPage}
                                            (#{messages['common.list.paging.of']} #{pageBean.pageQuantity})"
                                    rendered="#{pageBean.pageQuantity &gt; 0}" />
                       <h:outputText id="#{pagerAlign}_pageOneText"
                                    value="#{messages['common.list.paging.page']} #{pageBean.currentPage}"
                                    rendered="#{pageBean.pageQuantity == 0}" />
                    </td>
                    <td width="5" />
                    <td>
                        <h:panelGroup id="#{pagerAlign}_goToPageGroup" rendered="#{pageBean.pageQuantity &gt; 1}">
                            <table border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td>
                                    <h:outputText id="#{pagerAlign}_delimiter" value="|" />
                                </td>
                                <td width="5" />
                                <td nowrap="nowrap">
                                    <div id="#{pagerAlign}_changePagesOff" style="display:block;">
                                        <h:outputLink id="#{pagerAlign}_gotoLink" value="javascript:void(0)"
                                            onclick="showHideDIVById('#{pagerAlign}_changePagesOn');showHideDIVById('#{pagerAlign}_changePagesOff');">
                                            <h:outputText id="#{pagerAlign}_gotoLinkText" value="#{messages['common.list.paging.goto']}" />
                                        </h:outputLink>
                                    </div>
                                    <div id="#{pagerAlign}_changePagesOn" style="display:none;">
                                        <h:form id="#{pagerAlign}_listPagingGoForm">
                                            <table border="0" cellspacing="0" cellpadding="0" width="100%">
                                            <tr>
                                                <td>
                                                    #{messages['common.list.paging.gotoPage']}
                                                </td>
                                                <td width="5" />
                                                <td>
                                                    <h:inputText id="#{pagerAlign}_inputQuantity" value="#{pageBean.currentPage}" size="2"
                                                        onkeypress="if (event.keyCode == 13) { if (changePagesSettings(this.id, '#{pagerAlign}')) #{pagerAlign}_doExactPage(); return false; }" />
                                                </td>
                                                <td width="5" />
                                                <td>
                                                    <a4j:commandButton id="#{pagerAlign}_changePageButton" action="#{pageBean.doExactPage}"
                                                            onclick="if (!(changePagesSettings(this.id, '#{pagerAlign}'))) return false;"
                                                            reRender="#{bodyPanelId}" type="submit"
                                                            image="/images/paging/icon_page_go.gif" />
                                                    <h:inputHidden id="#{pagerAlign}_totalQuantity" value="#{pageBean.pageQuantity}" />
                                                    <a4j:jsFunction id="#{pagerAlign}_doExactPage" name="#{pagerAlign}_doExactPage" limitToList="true"
                                                        reRender="#{bodyPanelId}" requestDelay="1" action="#{pageBean.doExactPage}">
                                                    </a4j:jsFunction>
                                                </td>
                                            </tr>
                                            </table>
                                        </h:form>
                                    </div>
                                </td>
                                <td width="10" />
                            </tr>
                            </table>
                        </h:panelGroup>
                    </td>
                    <td>
                        <h:form id="#{pagerAlign}_listPagingStepForm">
                            <table border="0" cellspacing="0" cellpadding="0" width="100%">
                            <tr>
                                <td>
                                    <a4j:commandLink id="#{pagerAlign}_firstPageLink" action="#{pageBean.doFirstPage}" rendered="#{pageBean.currentPage &gt; 1}" reRender="#{bodyPanelId}">
                                        <h:graphicImage id="#{pagerAlign}_firstPageLinkImg" url="/images/paging/icon_page_first.gif" height="17" width="18" />
                                    </a4j:commandLink>
                                    <h:graphicImage id="#{pagerAlign}_firstPageImg" rendered="#{pageBean.currentPage &lt;= 1}"
                                            url="/images/paging/icon_page_first_disable.gif" height="17" width="18" />
                                </td>
                                <td width="5" />
                                <td>
                                    <a4j:commandLink id="#{pagerAlign}_prevPageLink" action="#{pageBean.doPrevPage}" rendered="#{pageBean.currentPage &gt; 1}" reRender="#{bodyPanelId}">
                                        <h:graphicImage id="#{pagerAlign}_prevPageLinkImg" url="/images/paging/icon_page_previous.gif" height="17" width="18" />
                                    </a4j:commandLink>
                                    <h:graphicImage id="#{pagerAlign}_prevPageImg" rendered="#{pageBean.currentPage &lt;= 1}"
                                            url="/images/paging/icon_page_previous_disable.gif" height="17" width="18" />
                                </td>
                                <td width="5" />
                                <td>
                                    <a4j:commandLink id="#{pagerAlign}_nextPageLink" action="#{pageBean.doNextPage}" rendered="#{pageBean.currentPage &lt; pageBean.pageQuantity}" reRender="#{bodyPanelId}">
                                        <h:graphicImage id="#{pagerAlign}_nextPageLinkImg" url="/images/paging/icon_page_next.gif" height="17" width="18" />
                                    </a4j:commandLink>
                                    <h:graphicImage id="#{pagerAlign}_nextPageImg" rendered="#{pageBean.currentPage &gt;= pageBean.pageQuantity}"
                                            url="/images/paging/icon_page_next_disable.gif" height="17" width="18" />
                                </td>
                                <td width="5" />
                                <td>
                                    <a4j:commandLink id="#{pagerAlign}_lastPageLink" action="#{pageBean.doLastPage}" rendered="#{pageBean.currentPage &lt; pageBean.pageQuantity}" reRender="#{bodyPanelId}">
                                        <h:graphicImage id="#{pagerAlign}_lastPageLinkImg" url="/images/paging/icon_page_last.gif" height="17" width="18" />
                                    </a4j:commandLink>
                                    <h:graphicImage id="#{pagerAlign}_lastPageImg" rendered="#{pageBean.currentPage &gt;= pageBean.pageQuantity}"
                                            url="/images/paging/icon_page_last_disable.gif" height="17" width="18" />
                                </td>
                            </tr>
                            </table>
                        </h:form>
                    </td>
                </tr>
                </table>
            </td>
        </tr>
        </table>
    </ui:composition>
</html>