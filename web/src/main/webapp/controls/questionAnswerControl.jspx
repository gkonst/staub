<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:a4j="http://richfaces.org/a4j">

<ui:composition>
    <div id="questionAnswerPanel" class="questionAnswerPanel">
        <a4j:outputPanel id="multipleChoice" rendered="#{questionDetailBean.questionDefinition.multipleChoice != null}">
            <h:selectManyCheckbox layout="pageDirection" value="#{questionDetailBean.answerMultipleChoice}">
                <f:selectItems value="#{questionDetailBean.answerChoiceItems}"/>
            </h:selectManyCheckbox>
        </a4j:outputPanel>
        <a4j:outputPanel id="singleChoice" rendered="#{questionDetailBean.questionDefinition.singleChoice != null}">
            <h:selectOneRadio layout="pageDirection">
                <f:selectItems value="#{questionDetailBean.answerChoiceItems}"/>
            </h:selectOneRadio>
        </a4j:outputPanel>
    </div>
</ui:composition>
</html>